<%= turbo_frame_tag :new_email do %>
  <div class="w-full flex justify-between items-center">
    <%= link_to emails_path, class: "flex items-center text-gray-900 ml-auto" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
      </svg>
    <% end %>
  </div>
  <div class="w-full mx-auto pb-4">
    <%= form_with model: @email do |f| %>
      <div class="flex flex-col">
        <%= f.label :to_address, "To Email" %>
        <%= f.email_field :to_address, class: "w-full rounded-full border-0 bg-white", placeholder: "Enter an email address to send to" %>
        <% if f.object.errors[:to_address].any? %>
          <div class="flex gap-2 items-center text-red-500">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
            </svg>
            <span class=""> <%= f.object.errors[:to_address].join(", ") %> </span>
          </div>
        <% end %>
      </div>

      <div class="flex flex-col mt-4">
        <%= f.label :subject %>
        <%= f.text_field :subject, class: "w-full rounded-full border-0 bg-white", placeholder: "Type the subject for your email here" %>
        <% if f.object.errors[:subject].any? %>
          <div class="flex gap-2 items-center text-red-500">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
            </svg>
            <span class=""> <%= f.object.errors[:subject].join(", ") %> </span>
          </div>
        <% end %>
      </div>

      <div class="flex flex-col my-4">
        <%= f.label :body %>
        <%= f.rich_text_area :body, class: "w-full border-0 bg-white z-0" %>
        <% if f.object.errors[:body].any? %>
          <div class="flex gap-2 items-center text-red-500">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
            </svg>
            <span class=""> <%= f.object.errors[:body].join(", ") %> </span>
          </div>
        <% end %>
      </div>

      <div class="flex gap-4 items-center">
        <%= button_tag class: "bg-indigo-500 text-indigo-50 rounded-lg p-2 flex items-center gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
          </svg>
          <span> Send Email </span>
        <% end %>

        <%= button_tag class: "bg-pink-500 text-pink-50 rounded-lg p-2 flex items-center gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5m6 4.125 2.25 2.25m0 0 2.25 2.25M12 13.875l2.25-2.25M12 13.875l-2.25 2.25M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" />
          </svg>
          <span> Save Draft </span>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>